    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Main dashboard functionality
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const toggleSidebar = document.getElementById('toggleSidebar');
            const toggleIcon = document.getElementById('toggleIcon');
            let isCollapsed = false;

            // Desktop sidebar toggle functionality
            if (toggleSidebar) {
                toggleSidebar.addEventListener('click', () => {
                    isCollapsed = !isCollapsed;
                    
                    if (isCollapsed) {
                        sidebar.classList.add('sidebar-collapsed');
                        if (window.innerWidth >= 768) {
                            mainContent.style.marginLeft = '80px';
                        }
                        toggleIcon.classList.remove('fa-chevron-left');
                        toggleIcon.classList.add('fa-chevron-right');
                    } else {
                        sidebar.classList.remove('sidebar-collapsed');
                        if (window.innerWidth >= 768) {
                            mainContent.style.marginLeft = '256px';
                        }
                        toggleIcon.classList.remove('fa-chevron-right');
                        toggleIcon.classList.add('fa-chevron-left');
                    }
                });
            }

            // Mobile sidebar functionality
            const mobileToggleSidebar = document.getElementById('mobileToggleSidebar');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            const closeMobileSidebar = document.getElementById('closeMobileSidebar');
            const mobileSidebarContent = document.getElementById('mobileSidebarContent');
            
            if (mobileToggleSidebar) {
                mobileToggleSidebar.addEventListener('click', () => {
                    sidebarOverlay.style.display = 'block';
                    document.body.style.overflow = 'hidden';
                    setTimeout(() => {
                        mobileSidebarContent.classList.add('open');
                    }, 10);
                });
            }
            
            if (closeMobileSidebar) {
                closeMobileSidebar.addEventListener('click', () => {
                    closeMobileSidebarFunction();
                });
            }
            
            if (sidebarOverlay) {
                sidebarOverlay.addEventListener('click', (e) => {
                    if (e.target === sidebarOverlay) {
                        closeMobileSidebarFunction();
                    }
                });
            }

            function closeMobileSidebarFunction() {
                mobileSidebarContent.classList.remove('open');
                document.body.style.overflow = '';
                setTimeout(() => {
                    sidebarOverlay.style.display = 'none';
                }, 300);
            }

            // Mobile navigation links
            const mobileNavLinks = document.querySelectorAll('#mobileSidebarContent a');
            mobileNavLinks.forEach(link => {
                link.addEventListener('click', () => {
                    closeMobileSidebarFunction();
                });
            });

            // Handle window resize
            window.addEventListener('resize', () => {
                if (window.innerWidth >= 768) {
                    sidebarOverlay.style.display = 'none';
                    mobileSidebarContent.classList.remove('open');
                    document.body.style.overflow = '';
                    if (isCollapsed) {
                        mainContent.style.marginLeft = '80px';
                    } else {
                        mainContent.style.marginLeft = '256px';
                    }
                } else {
                    mainContent.style.marginLeft = '0';
                }
            });

            // Set initial state based on screen size
            if (window.innerWidth < 768) {
                mainContent.style.marginLeft = '0';
            }

            // Chart.js initialization
            const salesTrendChart = new Chart(document.getElementById('salesTrendChart'), {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Sales (₹)',
                        data: [1200, 1500, 1300, 1700, 1600, 1800, 2000],
                        borderColor: '#8B2635',
                        backgroundColor: 'rgba(139, 38, 53, 0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });

            const productCategoryChart = new Chart(document.getElementById('productCategoryChart'), {
                type: 'doughnut',
                data: {
                    labels: ['Cakes', 'Pastries', 'Breads', 'Cookies', 'Desserts'],
                    datasets: [{
                        data: [35, 25, 20, 10, 10],
                        backgroundColor: [
                            '#8B2635',
                            '#A53860',
                            '#6c5b7b',
                            '#355c7d',
                            '#c06c84'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
        });
    </script>
